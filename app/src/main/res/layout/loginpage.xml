<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_main"
    >
    <TextView
        android:id="@+id/login_singin"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="注册"
        android:background="@drawable/radius_50dp_border_white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/login_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@mipmap/icon_logo"
            />
        <TextView
            android:id="@+id/login_title1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="云上西师"
            android:textColor="#ffffff"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/login_title2"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="便捷和高效"
            android:textColor="#ffffff"
            android:textSize="15sp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <include
                android:id="@+id/login_input"
                android:layout_width="wrap_content"
                android:layout_margin="25dp"
                android:layout_height="wrap_content"
                layout="@layout/loginpage_input" />
            <include
                android:id="@+id/login_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                layout="@layout/loginpage_progress"
                android:visibility="gone" />
        </RelativeLayout>
        <TextView
            android:id="@+id/login_loginbutton"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_loginbutton"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/loginpage_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="忘记密码?"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="www.louisguo.cn @2018"
        android:textSize="12dp" />
</RelativeLayout>