<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/scanpage_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zxing_framing_rect_height="250dp"
        app:zxing_framing_rect_width="250dp"
        app:zxing_preview_scaling_strategy="fitXY"
        app:zxing_use_texture_view="true"
        >
        <ImageView
            android:id="@+id/scanpage_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:padding="8dp"
            android:rotation="180"
            android:src="@mipmap/icon_go"
            android:background="@drawable/radius_90dp_dark_transparent"/>
        <ImageView
            android:id="@+id/scanpage_flashlight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:padding="8dp"
            android:src="@mipmap/icon_flashlight"
            android:background="@drawable/radius_90dp_dark_transparent"/>
    </com.journeyapps.barcodescanner.DecoratedBarcodeView>
</android.support.constraint.ConstraintLayout>