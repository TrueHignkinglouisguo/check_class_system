<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
    <Method.NoScrollViewPager
        android:id="@+id/mainpage_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.2"
        >
    </Method.NoScrollViewPager>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/mainpage_bnv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:elevation="4dp"
        android:outlineProvider="bounds"
        android:translationZ="8dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/mainpage_bnv"
        app:itemIconTint="@drawable/mainpage_bnv_selector"
        app:itemTextColor="@drawable/mainpage_bnv_selector"
        app:itemIconSize="20dp"
        >
    </android.support.design.widget.BottomNavigationView>
</LinearLayout>